@page
@model Cofetaria_Sky.Pages.Account.ChangeEmailModel
@{
    ViewData["Title"] = "Schimbare email";
}
<div id="change_email" style="margin-top: 76px !important;">

    <form method="post" style="margin-top: 150px; margin-left: 15%;" id="form_email">
        <h1><strong>Schimbă adresa de email</strong></h1>

        <div asp-validation-summary="ModelOnly"></div>


        <div style="width: 400px; display: grid;">
            <label style="font-size: 40px;">Email:</label>
            <input type="text" id="prenume" asp-for="Email"
                   placeholder="Introdu noua ta adresă de email"
                   style="font-size: 25px;">
            <span asp-validation-for="Email" class="text-danger" style="font-size: 30px;"></span>
        </div>

        <div style="width: 400px; display: grid;">
            <label style="font-size: 40px;">Parolă:</label>
            <input type="password" id="nume" asp-for="Password"
                   placeholder="Introdu parola ta"
                   style="font-size: 25px;">
            <span asp-validation-for="Password" class="text-danger" style="font-size: 30px;"></span>
        </div>

        <button class="btn btn-primary" type="submit" style="margin-top: 50px;">Schimbă email-ul</button>
    </form>
</div>

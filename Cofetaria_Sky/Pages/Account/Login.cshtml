@page
@model Cofetaria_Sky.Pages.LoginModel
@{
    ViewData["Title"] = "Autentificare";
}

<div id="autentificare" class="row" style="width: 100%; margin-bottom: 0; margin-top: 76px !important;">

    <div class="col-sm" style="margin-top: 0px !important;">

        <div id="galerie" class="carousel" data-ride="carousel" style="padding-left: 0px !important;">
            <div class="carousel-inner">
                <div class="carousel-item active ">
                    <img id="slide1" class="animate__animated animate__fadeIn"
                         src="~/imagini/optiuni/optiune1.png" alt="First slide">
                </div>

                <div class="carousel-item">
                    <img id="slide2" class="animate__animated animate__fadeIn"
                         src="~/imagini/optiuni/optiune2.png" alt="Second slide">
                </div>

                <div class="carousel-item">
                    <img id="slide3" class="animate__animated animate__fadeIn"
                         src="~/imagini/optiuni/optiune3.png" alt="Third slide">
                </div>

                <div class="carousel-item">
                    <img id="slide4" class="animate__animated animate__fadeIn"
                         src="~/imagini/optiuni/optiune4.png" alt="Third slide">
                </div>

                <div class="carousel-item">
                    <img id="slide5" class="animate__animated animate__fadeIn"
                         src="~/imagini/optiuni/optiune5.png" alt="Third slide">
                </div>

                <div class="carousel-item">
                    <img id="slide6" class="animate__animated animate__fadeIn"
                         src="~/imagini/optiuni/optiune6.png" alt="Third slide">
                </div>
            </div>
        </div>

    </div>

    <div class="col-sm" id="formular">

        <form method="post"
              style="margin-top: 50px !important; width: 80%; background: rgb(243,227,227, 0.2);">

            <h1><strong>Conectează-te</strong></h1>

            <div asp-validation-summary="ModelOnly"></div>

            <div class="mb-3 mt-3">
                <label asp-for="LoginPayload.Email" class="form-label">Email:</label>
                <input type="email" asp-for="LoginPayload.Email" class="form-control" placeholder="Introdu email-ul" style="font-size: 20px;">
                <span asp-validation-for="LoginPayload.Email" class="text-danger" style="font: 20px;"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LoginPayload.Password" class="form-label">Parolă:</label>
                <input type="password" asp-for="LoginPayload.Password" class="form-control" placeholder="Introdu parola" style="font-size: 20px;">
                <span asp-validation-for="LoginPayload.Password" class="text-danger" style="font: 20px;"></span>

            </div>

            <button id="login" type="submit" class="btn btn-primary"><strong>Conectează-te</strong></button>

            <div style="display: grid !important;">
                <a asp-area="" asp-page="/Account/ForgotPassword"
                   style="margin-top: 30px;
                    text-decoration: none;
                    width: 270px;">Resetează parola</a>

                <a asp-area="" asp-page="/Account/Register"
                   style="margin-top: 30px;
                    text-decoration: none;
                    width: 270px;">Crează un cont nou</a>
            </div>

        </form>

    </div>

</div>
